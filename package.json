{
	"name": "@antithrow/workspace",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run --workspaces --if-present build",
		"clean": "bun run --workspaces --if-present clean",
		"lint": "biome check . && bun lint:knip && bun run --workspaces --if-present lint",
		"lint:knip": "knip --cache",
		"format": "biome check --write .",
		"release": "bun run clean && bun run build && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@changesets/changelog-github": "0.5.2",
		"@changesets/cli": "2.29.8",
		"@types/bun": "1.3.6",
		"knip": "5.82.1",
		"lefthook": "2.0.15",
		"publint": "0.3.16",
		"typescript": "5.9.3"
	}
}
