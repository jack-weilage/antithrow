{
	"name": "antithrow",
	"version": "1.0.0",
	"description": "Rust-style Result types for type-safe error handling without exceptions",
	"license": "MIT",
	"author": "Jack Weilage",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jack-weilage/antithrow.git"
	},
	"keywords": [
		"result",
		"error-handling",
		"typescript",
		"functional"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"clean": "rm -rf dist",
		"lint": "biome check . && bun lint:publint && bun lint:types",
		"lint:publint": "publint",
		"lint:types": "tsc --noEmit",
		"format": "biome format --write .",
		"release": "bun run clean && bun run build && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "1.3.6",
		"lefthook": "^2.0.15",
		"publint": "^0.3.16",
		"typescript": "^5.9.3"
	}
}
